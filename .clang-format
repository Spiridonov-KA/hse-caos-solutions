IndentWidth: 4
SpaceAfterCStyleCast: false
BreakBeforeBraces: Attach
AllowShortFunctionsOnASingleLine: false
SpacesBeforeTrailingComments: 2
IndentGotoLabels: false
SeparateDefinitionBlocks: Always
DerivePointerAlignment: false
PointerAlignment: Left
AllowShortLambdasOnASingleLine: Empty
AllowShortIfStatementsOnASingleLine: Never
# Currently named as BreakTemplateDeclarations
AlwaysBreakTemplateDeclarations: true
# Работает начиная с clang-format-15. Закомментируйте эту строку, если используете более старую версию.
# Для условий и циклов всегда нужно использовать фигурные скобки.
InsertBraces: true
